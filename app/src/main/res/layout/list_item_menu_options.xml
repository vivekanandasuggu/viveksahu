<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ff8c">

    <ImageView
        android:id="@+id/img_menu_icons"
        android:layout_width="23dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@+id/txt_menu_item"
        android:layout_alignTop="@+id/txt_menu_item"
        android:layout_marginLeft="20dp"
        android:src="@drawable/desktop"
        android:tint="@color/white" />

    <TextView
        android:id="@+id/txt_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/img_menu_icons"
        android:includeFontPadding="false"
        android:text="DashBoard"
        android:textColor="@color/white"
        android:textSize="17dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@+id/txt_menu_item"
        android:layout_marginTop="15dp"
        android:background="#0b0b9b"></View>
</RelativeLayout>